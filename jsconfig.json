{
  "compilerOptions": {
    "module": "commonjs",
    "target": "ES2020",
    "jsx": "react",
    "checkJs": false,
    "baseUrl": ".",
    "paths": {
      "*": ["*"]
    },
    "forceConsistentCasingInFileNames": false
  },
  "include": [
    "backend/src/**/*",
    "frontend/src/**/*"
  ],
  "exclude": [
    "node_modules",
    "**/node_modules"
  ]
}

